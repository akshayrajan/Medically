<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/newbackgroundreturns">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView

                android:text="List of Hospitals"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/johnshospital"
                android:paddingTop="10dp"
                android:text="1.ST JOHNS HOSPITAL"
                android:textSize="20sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/colombiaasis"
                android:paddingTop="10dp"
                android:text="2.COLUMBIA ASIA"
                android:textSize="20sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/colombiaamerica"
                android:paddingTop="10dp"
                android:text="3.COLUMBIA AMERICA"
                android:textSize="20sp"
                android:textColor="#000000" />

        </TableLayout>


    </ScrollView>

</LinearLayout>