<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/newbackgroundreturns"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText1"
        android:padding="20dp"
        android:src="@drawable/newicon" />
    <EditText
        android:id="@+id/editText1"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_above="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edittextshape"
        android:hint="EMAIL ID" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_above="@+id/loginbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittextshape"
        android:hint="PASSWORD" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_above="@+id/noaccount"
        android:layout_alignLeft="@+id/noaccount"
        android:layout_alignStart="@+id/noaccount"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:background="@drawable/mybutton"
        android:text="LOGIN" />

    <TextView
        android:id="@+id/noaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="No account?SignUP"
        android:textColor="#000000"
        android:textSize="25sp" />


</RelativeLayout>
